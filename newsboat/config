include themes/gruvbox

bind-key g home
bind-key G end
bind-key h quit
bind-key j down
bind-key k up
bind-key l open
unbind-key ^L
bind-key ^E redraw
bind-key ^T edit-flags

auto-reload yes
reload-time 60
reload-threads 4

browser urlopen


macro l set browser "readable %u | lynx -stdin -vikeys"; open-in-browser; set browser urlopen
