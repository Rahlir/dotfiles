# File where all aliases should be
alias q='exit'
alias c='clear'
alias cc='clear && tmux clear-history'
alias ll='ls -alF'
alias lsa='ls -a'
alias mkdirv='mkdir -v'
alias pfind='find . -name'

alias home='cd ~'
alias dev='cd ~/Development'
alias phys='cd ~/Development/Physics'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

alias gcom='git commit -m'
alias gst='git status'
alias gmod='git add -u'

alias powerlinedir='cd $POWERLINEDIR'
alias tmux-reload='tmux source $HOME/.tmux.conf'
alias base16-colortest='. $HOME/.config/base16-shell/colortest'

# Shortcuts to rc files
alias vimrc='vim ~/.vimrc'
alias bashrc='vim ~/.bashrc'
alias aliases='vim ~/.bashrc_aliases'
alias reload='source ~/.bashrc'
alias dotfiles='cd ~/.dotfiles'

# SSH shortcut
alias wall-e='ssh wall-e.karlov.mff.cuni.cz'

